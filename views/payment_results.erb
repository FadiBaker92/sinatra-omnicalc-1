 <h1>
  Payment Results
</h1>
  <%= params %>
<dl>
  <dt>
    APR
  </dt>
  <dd>
   <%= params.fetch("apr").to_f.to_fs(:percentage, {:precision => 4})%>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= params.fetch("num_of_years")%>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= params.fetch("principal").to_f.to_fs(:currency)%>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%=  @denominator   %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
